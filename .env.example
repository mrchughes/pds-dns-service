# Environment Variables (.env)

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Connection
MONGODB_URI=mongodb://localhost:27017/dns_service

# DNS Server Configuration
DNS_PORT=53235  # Needs to be a non-privileged port for development

# Logging
LOG_LEVEL=info
LOG_FILE=logs/dns-service.log

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
TOKEN_EXPIRY=1h

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Verification
CHALLENGE_TOKEN_EXPIRY=86400  # 24 hours in seconds

# Integration
ONELOGIN_API_URL=http://localhost:3010/api
PDS_API_URL=https://pds.example.org/api

# API Authentication
API_KEY_ONELOGIN=dev-api-key
API_KEY_PDS=example-pds-api-key
